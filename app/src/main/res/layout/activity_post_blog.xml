<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kingsley.miaoxin.ui.PostBlogActivity">

    <EditText
        android:id="@+id/post_blog_ed_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/edit_text_shape"
        android:lines="8"
        android:maxLines="10"
        android:gravity="top"
        android:padding="8dp"
        android:hint="这一刻的想法..."
        tools:ignore="LabelFor,TextFields" />

    <LinearLayout
        android:id="@+id/post_blog_ll_ivContainer"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/post_blog_rl_iv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/iv_stroke_shape">

            <ImageView
                android:id="@+id/post_blog_iv_iv1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/post_blog_iv_del_iv1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post_blog_rl_iv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/iv_stroke_shape">

            <ImageView
                android:id="@+id/post_blog_iv_iv2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/post_blog_iv_del_iv2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post_blog_rl_iv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/iv_stroke_shape">

            <ImageView
                android:id="@+id/post_blog_iv_iv3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/post_blog_iv_del_iv3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/post_blog_rl_iv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/iv_stroke_shape">

            <ImageView
                android:id="@+id/post_blog_iv_iv4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/post_blog_iv_del_iv4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/post_blog_tv_blogIv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:text=""/>
        <LinearLayout
            android:id="@+id/post_blog_ll_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="invisible">
            <TextView
                android:id="@+id/post_blog_tv_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="0 %"/>
            <ProgressBar
                android:id="@+id/post_blog_progressbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="15dp"
                style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/post_blog_ll_btnContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">
        <ImageButton
            android:id="@+id/post_blog_ib_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:button="@null"
            android:background="@drawable/post_add_selector"/>
        <ImageButton
            android:id="@+id/post_blog_ib_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:button="@null"
            android:layout_margin="8dp"
            android:visibility="invisible"
            android:background="@drawable/post_picture_selector" />
        <ImageButton
            android:id="@+id/post_blog_ib_camera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:button="@null"
            android:layout_margin="8dp"
            android:visibility="invisible"
            android:background="@drawable/post_camera_selector"/>
        <ImageButton
            android:id="@+id/post_blog_ib_location"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:button="@null"
            android:layout_margin="8dp"
            android:visibility="invisible"
            android:background="@drawable/post_location_selector"/>
    </LinearLayout>

</LinearLayout>
